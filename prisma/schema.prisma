model Product {
  id          String   @id @default(uuid()) @db.Uuid
  name        String
  slug        String   @unique(map: "product_slug_idx")
  category    String
  description String
  images      String[]
  price       Decimal  @db.Decimal(12, 2)
  brand       String
  rating Decimal @db.Decimal(3, 2)
  numReviews Int
  stock Int
  isFeatured Boolean @default(false)
  banner String?
  createdAt   DateTime @default(now())
}
